%YAML 1.2
---
name: XPX
file_extensions:
  - xpx
  - phc
scope: text.html.xpx

contexts:
  main:
    - match: ""
      push: Packages/HTML/HTML.sublime-syntax
      with_prototype:
        # Définir les autres régions classiques XPX.
        - include: xpx-comment
        - include: xpx-tag-block-noparse
        - include: xpx-javascript
        - include: xpx-tag-block
        - include: xpx-tag-block-function
        - include: xpx-tag-inline
        # Permettre la reconnaissance des variables dans le HTML.
        - match: '\$'
          push: xpx-variable

  # Permettre de placer le code XPX en commentaire en scope comment.
  xpx-comment:
    - match: <!--
      scope: punctuation.definition.comment.html
      push:
        - meta_scope: comment.block.html
        - match: '-->'
          scope: punctuation.definition.comment.html
          pop: true
        # Suppression du match -- pour éviter les affichages "erreur commentaire" prévus dans html.

  # Définir un scope spécifique pour le noparse XPX : stopper l'analyse syntaxique XPX.
  xpx-tag-block-noparse:
    - match: '(?:^\s+)?(<)((?i:noparse))\b(?![^>]*/>)'
      captures:
        1: punctuation.definition.tag.begin.html
        2: entity.name.tag.xpx
      push:
        - meta_scope: meta.tag.block.noparse.xpx
        - match: (?i)(</)(noparse)(>)
          captures:
            1: punctuation.definition.tag.begin.html
            2: entity.name.tag.xpx
            3: punctuation.definition.tag.end.html
          pop: true
        - match: '>'
          scope: punctuation.definition.tag.end.html
          push:
            - meta_content_scope: meta.tag.block.noparse.xpx
            - include: 'scope:text.html.basic'
          with_prototype:
            - match: (?i)(?=</noparse)
              pop: true

  # Permettre d'isoler les variables XPX dans les blocs de type text/javascript.
  xpx-javascript:
    - match: '(<)((?i:script))\b(?![^>]*/>)(?![^>]*(?i:type.?=.?text/((?!javascript).*)))'
      captures:
        1: punctuation.definition.tag.begin.html
        2: entity.name.tag.script.html
      push:
        - match: (?i)(</)(script)(>)
          captures:
            1: punctuation.definition.tag.begin.html
            2: entity.name.tag.script.html
            3: punctuation.definition.tag.end.html
          pop: true
        # Permet l'analyse des attributs de la balise script.
        - include: 'scope:text.html.basic#tag-stuff'
        - match: '>'
          scope: punctuation.definition.tag.end.html
          push:
            - meta_content_scope: source.js.embedded.html
            - include: 'scope:source.js'
          with_prototype:
            - match: '\$'
              push: xpx-variable
            - match: (?i)(?=</script)
              pop: true

  # Définir une région (scope) balise double (block) XPX par mot-clé.
  xpx-tag-block:
    - match: '(</?)((?i:cond|csv|scope|setarea|sql|while|xpath|xproc)\b)'
      captures:
        1: punctuation.definition.tag.begin.html
        2: entity.name.tag.block.any.html entity.name.tag.xpx
      push:
        - meta_scope: meta.tag.block.any.xpx
        # Fin de balise sans /.
        - match: '>'
          scope: punctuation.definition.tag.end.html
          pop: true
        - include: xpx-attribute
        - include: xpx-attribute-query

  # Définir une région (scope) balise double (block) XPX par mot-clé.
  xpx-tag-block-function:
    - match: '(</?)((?i:function)\b)'
      captures:
        1: punctuation.definition.tag.begin.html
        2: entity.name.tag.block.any.html entity.name.tag.xpx
      push:
        - meta_scope: meta.tag.block.any.xpx meta.tag.block.function.xpx
        # Fin de balise sans /.
        - match: '>'
          scope: punctuation.definition.tag.end.html
          pop: true
        - include: xpx-attribute-function-name
        - include: xpx-attribute-function-any
        # Permet l'analyse syntaxique des attributs non déterminés de la balise XPX/function (arguments).
        - include: 'scope:text.html.basic#tag-stuff'

  # Définir une région (scope) balise simple (inline) XPX par mot-clé.
  xpx-tag-inline:
    - match: '(</?)((?i:cookie|connect|create|debug|else|file|get|http|include|mail|pdf|pict|set|system|wait)\b)'
      captures:
        1: punctuation.definition.tag.begin.html
        2: entity.name.tag.inline.any.html entity.name.tag.xpx
      push:
        - meta_scope: meta.tag.inline.any.xpx
        # Fin de balise sans / ou bien avec /.
        - match: '(?: ?/)?>'
          scope: punctuation.definition.tag.end.html
          pop: true
        - include: xpx-attribute

  # Définir une région (scope) d'une propriété de balise XPX par mot-clé.
  xpx-attribute:
    # (?i) case insensitive
    - match: '\s+\b((?i)(align|addpage|base|bgcolor|bit|bitoff|biton|border|by|calc|cc|cci|charset|chartohexa|close|color|connect|content|datetime|decode64|decrypt|delete|dest|dir|domain|encode64|encrypt|eol|exec|exist|expr|file|font|format|frame|from|get|geth|getw|getx|gety|gettext|global|hash|headers|hex2bin|hexatochar|hmac|href|html2text|id|info|join|keycode|lang|leading|len|line|local|lowcase|ltrim|maxrows|mode|model|money|msg|name|noaccent|open|option|padding|pagesize|pass|path|port|rand|read|rect|replace|reply|return|rotate|round|rtrim|samesite|select|sep|server|session|size|smtp|socket|start|strcode|strdecode|strescape|style|subject|svg2pdf|text|timeout|transaction|trim|ttl|to|token|type|upcase|urlcode|value|write|xmlcode|xpx)\b\s*(=)\s*)'
      captures:
        1: meta.attribute-with-value.html
        2: entity.other.attribute-name.xpx
        3: punctuation.separator.key-value.html
      push:
        - match: '"'
          scope: punctuation.definition.string.begin.xpx
          set:
            # Eliminer tous les guillements échappés.
            - match: '\\"'
            - meta_scope: meta.attribute-with-value.html string.quoted.double.html
            - meta_content_scope: entity.other.attribute-value.xpx
            - match: '"'
              scope: punctuation.definition.string.end.xpx
              pop: true
            - match: '\$'
              push: xpx-variable
        - match: ''
          pop: true

  # Définir une région (scope) d'une propriété de balise XPX par mot-clé.
  # Région de la propriété name de function.
  xpx-attribute-function-name:
    # Pour la balise function : n'importe quel nom de propriété.
    - match: '\s+\b((?i)(name)\b\s*(=)\s*)'
      captures:
        1: meta.attribute-with-value.html
        2: entity.other.attribute-name.xpx
        3: punctuation.separator.key-value.html
      push:
        - match: '"'
          scope: punctuation.definition.string.begin.xpx
          set:
            # Eliminer tous les guillements échappés.
            - match: '\\"'
            - meta_scope: meta.attribute-with-value.html string.quoted.double.html
            # Définir explicitement un scope d'indexation symbol : entity.function.name.xpx
            - meta_content_scope: entity.other.attribute-value.xpx entity.function.name.xpx
            - match: '"'
              scope: punctuation.definition.string.end.xpx
              pop: true
            - match: '\$'
              push: xpx-variable
        - match: ''
          pop: true

  # Définir une région (scope) d'une propriété de balise XPX par mot-clé.
  # Région des arguments function (définies par dev.) différent des propriétés imposées par langage : name et exec.
  xpx-attribute-function-any:
    # Pour la balise function : n'importe quel nom de propriété.
    - match: '\s+\b(([a-zA-Z0-9_]*)\b\s*(=)\s*)'
      captures:
        1: meta.attribute-with-value.html
        2: entity.other.attribute-name.xpx
        3: punctuation.separator.key-value.html
      push:
        - match: '"'
          scope: punctuation.definition.string.begin.xpx
          set:
            # Eliminer tous les guillements échappés.
            - match: '\\"'
            - meta_scope: meta.attribute-with-value.html string.quoted.double.html
            - meta_content_scope: entity.other.attribute-value.xpx
            - match: '"'
              scope: punctuation.definition.string.end.xpx
              pop: true
            - match: '\$'
              push: xpx-variable
        - match: ''
          pop: true

  # Définir une région (scope) spécifique à la propriété query pour utilisation particulière
  # en thème.
  xpx-attribute-query:
    # (?i) case insensitive
    - match: '\s+\b((?i)(query)\b\s*(=)\s*)'
      captures:
        1: meta.attribute-with-value.html
        2: entity.other.attribute-name.query.xpx
        3: punctuation.separator.key-value.html
      push:
        - match: '"'
          scope: punctuation.definition.string.begin.xpx
          set:
            # Eliminer tous les guillements échappés.
            - match: '\\"'
            - meta_scope: meta.attribute-with-value.html string.quoted.double.html
            - meta_content_scope: entity.other.attribute-value.query.xpx
            - match: '"'
              scope: punctuation.definition.string.end.xpx
              pop: true
            - match: '\$'
              push: xpx-variable
        - match: ''
          pop: true

  # Définir une région (scope) variable XPX et variable incluse.
  xpx-variable:
    - meta_scope: variable.other.readwrite.xpx
    - match: '\b(phcdebug)\b'
      scope: variable.other.readwrite.specific-xpx.xpx
    - match: '\b(sqlrowcount)\b'
      scope: variable.other.readwrite.specific-sql.xpx
    - match: '\[[a-zA-Z0-9_]*\]'
      scope: variable.other.readwrite.included.xpx
    - match: '\$'
      pop: true
